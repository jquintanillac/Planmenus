@model Planmenus.Data.Entities.MDInicial

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card">
        <div class="card-header">
             <div class="div-title">
				<h2 class="text-center">ELIMINAR INICIAL</h2>
			 </div>
        </div>
        <div class="card-body">
             <div class="row">
                <div class="col-5">
                      <div class="form-group">
                            <label asp-for="ini_desc" class="control-label"></label>
                            <input asp-for="ini_desc" class="form-control" />
                            <span asp-validation-for="ini_desc" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ini_monto" class="control-label"></label>
                            <input asp-for="ini_monto" class="form-control" />
                            <span asp-validation-for="ini_monto" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ini_fecha" class="control-label"></label>
                            <input asp-for="ini_fecha" class="form-control" />
                            <span asp-validation-for="ini_fecha" class="text-danger"></span>
                       </div>
                </div>
                <div class="col-md-7">
                    <img src="~/AdminX-master/demo/img/menudel.jpg" width="580" height="400" />
                </div>
            </div> 
            <form asp-action="Delete">
                <div class="form-group">
                    <input type="hidden" asp-for="id_ini" />
                    <input type="submit" value="Eliminar" class="btn btn-sm btn-danger" /> |
                    <a class="btn btn-sm btn-primary" asp-action="Index">Regresar</a>
                </div>               
            </form>
        </div>
    </div>
</div>

