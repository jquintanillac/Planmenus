@model Planmenus.Data.Entities.MDMesas

@{
    ViewData["Title"] = "Delete";
}


<div class="container">
    <div class="card">
        <div class="card-header">
             <div class="div-title">
				<h2 class="text-center">ELIMINAR MESA</h2>
			 </div>
        </div>
        <div class="card-body">
             <div class="row">
                <div class="col-5">
                      <div class="form-group">
                            <label asp-for="mesa_desc" class="control-label"></label>
                            <input asp-for="mesa_desc" class="form-control" />
                            <span asp-validation-for="mesa_desc" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="mesa_nro" class="control-label"></label>
                            <input asp-for="mesa_nro" class="form-control" />
                            <span asp-validation-for="mesa_nro" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="mesa_act" /> @Html.DisplayNameFor(model => model.mesa_act)
                            </label>
                        </div>
                </div>
                <div class="col-md-7">
                    <img src="~/AdminX-master/demo/img/menudel.jpg" width="580" height="400" />
                </div>
            </div> 
            <form asp-action="Delete">
                <div class="form-group">
                    <input type="hidden" asp-for="id_mesa" />
                    <input type="submit" value="Eliminar" class="btn btn-sm btn-danger" /> |
                    <a class="btn btn-sm btn-primary" asp-action="Index">Regresar</a>
                </div>               
            </form>
        </div>
    </div>
</div>


