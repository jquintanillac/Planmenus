@model Planmenus.Data.Entities.MDMesas

@{
    ViewData["Title"] = "Create";
}


<div class="container">
    <div class="card">
        <div class="card-header">
             <div class="div-title">
				<h2 class="text-center">CREAR MESAS</h2>
			 </div>
        </div>
        <div class="card-body">
            <div class="row">
                 <div class="col-md-5">
                     <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="mesa_desc" class="control-label"></label>
                            <input asp-for="mesa_desc" class="form-control" />
                            <span asp-validation-for="mesa_desc" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="mesa_nro" class="control-label"></label>
                            <input asp-for="mesa_nro" class="form-control" />
                            <span asp-validation-for="mesa_nro" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="mesa_act" /> @Html.DisplayNameFor(model => model.mesa_act)
                            </label>
                        </div>
                        <br />
                        <div class="form-group">
                            <input type="submit" value="Grabar" class="btn btn-sm btn-primary" />
                            <a class="btn btn-sm btn-primary" asp-action="Index">Regresar</a>
                        </div>
                    </form>
                </div>  
                <div class="col-md-7">
                    <img src="~/AdminX-master/demo/img/menu1.jpg" width="580" height="400" />
                </div>
            </div>           
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

