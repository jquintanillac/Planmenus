@model Planmenus.Data.Entities.MDTipo_pago

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card">
        <div class="card-header">
             <div class="div-title">
				<h2 class="text-center">CREAR TIPO DE PAGO</h2>
			 </div>
        </div>
        <div class="card-body">
            <div class="row">
                 <div class="col-md-5">
                     <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="tipago_desc" class="control-label">Descripcion</label>
                                <input asp-for="tipago_desc" class="form-control" />
                                <span asp-validation-for="tipago_desc" class="text-danger"></span>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input"  asp-for="tipago_act" /> @Html.DisplayNameFor(model => model.tipago_act)
                                </label>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Crear" class="btn btn-sm btn-primary" />
                                 <a class="btn btn-sm btn-primary" asp-action="Index">Regresar</a>
                            </div>
                    </form>
                </div>  
                <div class="col-md-7">
                    <img src="~/AdminX-master/demo/img/tipo2.jpg" width="580" height="400" />
                </div>
            </div>           
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
