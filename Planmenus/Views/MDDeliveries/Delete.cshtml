@model Planmenus.Data.Entities.MDDelivery

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="card">
        <div class="card-header">
             <div class="div-title">
				<h2 class="text-center">ELIMINAR REPARTO</h2>
			 </div>
        </div>
        <div class="card-body">
             <div class="row">
                <div class="col-5">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="id_deliv" />
                    <div class="form-group">
                        <label asp-for="deliv_codig" class="control-label"></label>
                        <input asp-for="deliv_codig" class="form-control" readonly/>
                        <span asp-validation-for="deliv_codig" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="deliv_nombcom" class="control-label"></label>
                        <input asp-for="deliv_nombcom" class="form-control" readonly/>
                        <span asp-validation-for="deliv_nombcom" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="deliv_desc" class="control-label"></label>
                        <input asp-for="deliv_desc" class="form-control" readonly/>
                        <span asp-validation-for="deliv_desc" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-7">
                    <img src="~/AdminX-master/demo/img/menudel.jpg" width="580" height="400" />
                </div>
            </div> 
            <form asp-action="Delete">
                <div class="form-group">
                    <input type="hidden" asp-for="id_deliv" />
                    <input type="submit" value="Eliminar" class="btn btn-sm btn-danger" /> |
                    <a class="btn btn-sm btn-primary" asp-action="Index">Regresar</a>
                </div>               
            </form>
        </div>
    </div>
</div>

