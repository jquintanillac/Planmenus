@model Planmenus.Data.Entities.MDIngresos

@{
    ViewData["Title"] = "Editar ingreso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card">
        <div class="card-header">
             <div class="div-title">
				<h2 class="text-center">EDITAR INGRESO</h2>
			 </div>
        </div>
        <div class="card-body">
             <div class="row">
                <div class="col-5">
                     <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                       <input type="hidden" asp-for="id_ingre" />
                        <div class="form-group">
                            <label asp-for="ingre_desc" class="control-label"></label>
                            <input asp-for="ingre_desc" class="form-control" />
                            <span asp-validation-for="ingre_desc" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ingre_monto" class="control-label"></label>
                            <input asp-for="ingre_monto" class="form-control" />
                            <span asp-validation-for="ingre_monto" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ingre_fecha" class="control-label"></label>
                            <input asp-for="ingre_fecha" class="form-control" />
                            <span asp-validation-for="ingre_fecha" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Grabar" class="btn btn-sm btn-primary" />
                             <a class="btn btn-sm btn-primary" asp-action="Index">Regresar</a>
                        </div>
                    </form>
                </div>
                <div class="col-md-7">
                    <img src="~/AdminX-master/demo/img/menueditar.jpg" width="580" height="400" />
                </div>
            </div> 
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

