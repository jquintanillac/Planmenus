@model Planmenus.Data.Entities.MDRol_Usuario

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="card">
        <div class="card-header">
             <div class="div-title">
				<h2 class="text-center">CREAR ROL-USUARIO</h2>
			 </div>
        </div>
        <div class="card-body">
            <div class="row">
                 <div class="col-md-5">
                     <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                         <div class="form-group">
                                 <label class="control-label">Usuario: </label>
                                 <select class="form-control" asp-for="IdUsuario" asp-items="@(new SelectList(ViewBag.usuario, "IdUsuario", "Usua_user"))">
                                    <option>Seleccione usuario</option>
                                 </select>
                         </div>
                          <div class="form-group">
                                 <label class="control-label">Rol: </label>
                                 <select class="form-control" asp-for="id_rol" asp-items="@(new SelectList(ViewBag.rol, "id_rol", "rol_desc"))">
                                    <option>Seleccione rol</option>
                                 </select>
                         </div>                       
                        <br />
                        <div class="form-group">
                            <input type="submit" value="Grabar" class="btn btn-sm btn-primary" />
                            <a class="btn btn-sm btn-primary" asp-action="Index">Regresar</a>
                        </div>
                    </form>
                </div>  
                <div class="col-md-7">
                    <img src="~/AdminX-master/demo/img/menu1.jpg" width="580" height="400" />
                </div>
            </div>           
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

